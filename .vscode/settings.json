{
  "esbonio.sphinx.confDir": "${workspaceFolder}/source",
  "restructuredtext.linter.disabledLinters": ["rstcheck", "rst-lint"],
  "esbonio.server.enabled": false,
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "python.formatting.provider": "black",
  "hadolint.cliOptions": [
    "--ignore",
    "DL3008",
    "--ignore",
    "DL3013",
    "--no-color"
  ],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.enableFiletypes": ["po", "toml"],
  "restructuredtext.pythonRecommendation.disabled": true
}
