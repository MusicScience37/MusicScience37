{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "repositories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "gitlab_path": {
            "type": "string"
          },
          "ci_schedule": {
            "type": "string"
          },
          "default_branch": {
            "type": "string"
          },
          "main_languages": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "gitlab_path",
          "ci_schedule",
          "default_branch",
          "main_languages"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["repositories"],
  "additionalProperties": false
}
